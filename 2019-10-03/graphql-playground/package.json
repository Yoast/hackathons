{
  "name": "graphrobber",
  "version": "0.0.1",
  "description": "A playground for working with GraphQL",
  "main": "src/index.ts",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^4.17.1",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^14.5.8"
  },
  "devDependencies": {
    "@types/node": "^12.7.9",
    "nodemon": "^1.19.3",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "scripts": {
    "start": "ts-node .",
    "start:dev": "nodemon",
    "build": "tsc",
    "docker-run": "docker run -p 3001:3001 diedex/graphrobber",
    "docker-build": "docker build -t diedex/graphrobber .",
    "docker": "yarn run docker-build && yarn run docker-run"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node ."
  }
}
